generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Content {
  title   String?
  content String
  image   String
  links   String[]
}

model Article {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  date     DateTime
  contents Content[]
}
